#!/bin/sh

docloc="$XDG_DOCUMENTS_DIR/copied"

[ ! -d "$docloc" ] && mkdir -p "$docloc"

[ -z "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 🤭 " && cp -r "$1" "$docloc" && notify-send --urgency=low "Successful" "$1 copied successfully 😁  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 😥 " && exit 1 )) &
