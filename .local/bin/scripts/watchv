#!/bin/sh


anime(){ \
	vidpath=$( find "$XDG_VIDEOS_DIR/anime" -type d | dmenu -l 10 -c ) || exit 1
#	setsid vlc --video-on-top "$vidpath" 2>/dev/null
	total=$(  find "$vidpath" -type f | wc -l )

	num=$(echo "" | dmenu -p "From what episode to $total?" -c ) || exit 1
	[ -z "$num" ] && num=1
	printf "Total : %s\nEpisode : %s\nStart : %s\n" "$total" "$num" "$((1+total-num))"
	episode=$(find "$vidpath" -type f | sort | sed "/$num/ q" | wc -l )
	start=$((1 + total - episode))

	# shellcheck disable=SC2046
	mplayer -ao pulse,alsa,oss $(find "$vidpath" -type f | sort | tail -n "$start")


}


series(){
	vidpath=$( find "$XDG_VIDEOS_DIR/series" -type d | dmenu -l 10 -c ) || exit 1
	total=$( find "$vidpath" -type f | wc -l )
	num=$(echo "" | dmenu -p "From what episode to $total?" -c ) || exit 1
	[ -z "$num" ] && num=1
	episode=$(find "$vidpath" -type f | sort | sed "/$num/ q" | wc -l )
	start=$((1 + total - episode))
	# shellcheck disable=SC2046
	mplayer -ao pulse,alsa,oss $(find "$vidpath" -type f | sort | tail -n "$start") &


}


movie(){
	file=$(find "$XDG_VIDEOS_DIR/movies" -type f | dmenu -l 10 -c ) || exit 1
#	setsid vlc mplayer -on-top "$file" 2>/dev/null
	mplayer -ao pulse,alsa,oss "$file" 2>/dev/null
}

copied(){
	item=$( find "$XDG_VIDEOS_DIR/copied" | dmenu -l 10 -c ) || exit 1
	mplayer -ao pulse,alsa,oss "$item" 2>/dev/null

}
ytdl(){
	item=$( find "$XDG_VIDEOS_DIR/youtube-dl" -type f | dmenu -l 10 -c) || exit 1
	mplayer -ao pulse,alsa,oss "$item" 2>/dev/null

}
choice=$(printf "Anime\\nSeries\\nMovie\\nCopied\\nDownloads" | dmenu -l 10 -c )

case "$choice" in
	Anime) anime;;
	Series) series;;
	Movie) movie;;
	Copied) copied;;
	Downloads) ytdl;;
	*) exit 1
esac
