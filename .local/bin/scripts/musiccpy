#!/bin/sh

musicloc="$XDG_MUSIC_DIR/copied"

[ ! -d "$musicloc" ] && mkdir -p "$musicloc"


[ -z "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 🤭 " && cp -r "$1" "$musicloc" && notify-send --urgency=low "Successful" "$1 copied successfully 😁  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 😥 " && exit 1 )) &
