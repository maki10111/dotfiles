#!/bin/sh

othloc="$XDG_OTHERS_DIR/copied"

[ ! -d "$othloc" ] && mkdir -p "$othloc"



[ -f "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 🤭 " && cp "$1" "$othloc" && notify-send --urgency=low "Successful" "$1 copied successfully 😁  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 😥 " && exit 1 ))

[ -d "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 🤭 " && cp -r "$1" "$othloc" && notify-send --urgency=low "Successful" "$1 copied successfully 😁  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 😥 " && exit 1 ))
