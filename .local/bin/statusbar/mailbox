#!/bin/sh

# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e neomutt ;;
	2) setsid -f mw sync >/dev/null ;;
	3) notify-send "ğŸ“¬ Mail module" "\- Shows unread mail
- Shows ğŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac


mbsync -a >/dev/null 2>&1

unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/marknhelbesonia/INBOX/new/ -type f | wc -l 2>/dev/null)"

echo "ğŸ“¬$unread$icon"
