#!/bin/sh

picloc="$XDG_PICTURES_DIR/copied"
[ ! -d "$picloc" ] && mkdir -p "$picloc"


[ -z "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 🤭 " && cp -r "$1" "$picloc" && notify-send --urgency=low "Successful" "$1 copied successfully 😁  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 😥 " && exit 1 )) &
