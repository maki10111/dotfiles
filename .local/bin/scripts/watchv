#!/bin/sh

anime(){ \
	path=$( find "$XDG_VIDEOS_DIR/anime" -type d | dmenu -i -l 30 ) || exit
	setsid vlc --video-on-top "$path" 2>/dev/null
}

series(){
	path=$( find "$XDG_VIDEOS_DIR/series" -type d | dmenu -i -l 30 ) || exit 1
	setsid vlc --video-on-top "$path" 2>/dev/null
}


movie(){
	file=$(find "$XDG_VIDEOS_DIR/movies" -type f |dmenu -i -l 50 ) || exit 1
	setsid vlc --video-on-top "$file" 2>/dev/null
}

copied(){
	item=$( find "$XDG_VIDEOS_DIR/copied" | dmenu -i -l 30 ) || exit 1
	setsid vlc --video-on-top "$item" 2>/dev/null

}
ytdl(){
	item=$( find "$XDG_VIDEOS_DIR/youtube-dl" -type f | dmenu -i -l 20) || exit 1
	setsid vlc --video-on-top "$item" 2>/dev/null

}
choice=$(printf "Anime\\nSeries\\nMovie\\nCopied\\nDownloads" | dmenu -i -l 5 )

case "$choice" in
	Anime) anime;;
	Series) series;;
	Movie) movie;;
	Copied) copied;;
	Downloads) ytdl;;
	*) exit 1
esac
